<script>

    document.addEventListener("DOMContentLoaded", function () {
        function actualizarConteo() {
            $.getJSON('@Url.Action("ObtenerConteo", "Secretariums")', function (data) {
                $("#solicitud_conteo").text(data.conteo);
            });
        }

        setInterval(actualizarConteo, 30000);

        actualizarConteo();
    });

</script>
