@model SIGC_PROJECT.Models.Doctor
@using SIGC_PROJECT.Helper;

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card mt-2">

                <div class="card-header text-center">
                    <h2 style="font-weight: bold; font-size: 1.7em; color: #04294F;">Información General</h2>
                </div>

                <div class="card-body">

                    <form id="EditarDoctor" asp-action="Edit" asp-route-id="@Model.DoctorId" asp-controller="Doctors">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <input type="hidden" asp-for="DoctorId" />

                            <div class="col-md-3 mb-3">
                                <label asp-for="Cedula" class="control-label">Cédula</label>
                                <input asp-for="Cedula" class="form-control" />
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-9"></div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Apellido" class="control-label"></label>
                                <input asp-for="Apellido" class="form-control" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Especialidad" class="control-label"></label>
                                <input asp-for="Especialidad" class="form-control" readonly />
                                <span asp-validation-for="Especialidad" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="NumeroExequatur" class="control-label">Número Exequatur</label>
                                <input asp-for="NumeroExequatur" class="form-control" />
                                <span asp-validation-for="NumeroExequatur" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Telefono" class="control-label">Teléfono</label>
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="CorreoElectronico" class="control-label">Correo Electrónico</label>
                                <input asp-for="CorreoElectronico" class="form-control" />
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>

                            <input asp-for="IdUsuario" value="@SessionHelper.GetNameIdentifier(User)" hidden />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-estilo mt-5">Actualizar Datos</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-estilo {
        background-color: rgba(42, 62, 84, 1);
        color: #FFFFFF;
        font-weight: bold;
        transition: background-color 0.5s linear;
        width: 35%;
    }

    .btn-estilo:hover {
        background-color: rgba(42, 62, 84, 0.8);
        color: #FFFFFF;
    }
</style>

