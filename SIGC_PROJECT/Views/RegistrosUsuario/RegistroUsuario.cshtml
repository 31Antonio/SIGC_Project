@model SIGC_PROJECT.Models.Usuario

@{
    ViewData["Title"] = "Registro Usuario";
}

<div class="main" id="main">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-5">
                    <div class="card-header text-center">
                        <h2 style="font-weight: bold; font-size: 1.7em;">Registro de Usuario</h2>
                    </div>

                    <div class="card-body">

                        <form asp-action="Registrar" method="POST" asp-controller="RegistrosUsuario" id="Registrar">

                            <div class="form-group">
                                <label for="nombre" class="col-form-label">Usuario</label>
                                <input type="text" asp-for="NombreUsuario" id="nombre" class="form-control" />
                                <span asp-validation-for="NombreUsuario"></span>
                            </div>

                            <div class="form-group">
                                <label for="contrasena" class="col-form-label">Contraseña</label>
                                <input type="password" asp-for="Contrasena" id="contrasena" class="form-control" />
                                <span asp-validation-for="Contrasena"></span>
                            </div>

                            <div class="form-group">
                                <label for="roles" class="col-form-label">Rol del Usuario</label>
                                <select id="roles" class="form-control">
                                    <option value="" selected hidden>Seleccionar...</option>
                                    @foreach (var rol in ViewBag.Roles)
                                    {
                                        <option value="@rol.IdRol">@rol.Nombre</option>
                                    }
                                </select>
                            </div>

                            <button type="submit" class="btn btn-registrar btn-block mt-5">Crear Usuario</button>

                        </form>

                    </div>

                </div>
            </div>

        </div>
    </div>

</div>

@section Scripts {

    <style>
        .btn-registrar { 
            background-color: rgba(42, 62, 84, 1);
            color: #FFFFFF;
            transition: background-color 0.5s linear;
        }

        .btn-registrar:hover{
            background-color: rgba(42, 62, 84, 0.8);
            color: #FFFFFF;
        }
    </style>

    <script src="~/userlib/js/registrousuario.js"></script>
}