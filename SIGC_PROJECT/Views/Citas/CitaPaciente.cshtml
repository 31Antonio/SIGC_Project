@model SIGC_PROJECT.Models.ViewModel.CitasPacientesVM

@{
    ViewData["Title"] = "Historial de Citas";
}

<h1>Historial de Citas</h1>

<ul class="nav nav-tabs nav-fill" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pendientes-tab" data-toggle="tab" href="#pendientes" role="tab" aria-controls="pendientes" aria-selected="true">Citas Agendadas</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="completadas-tab" data-toggle="tab" href="#completadas" role="tab" aria-controls="completadas" aria-selected="false">Historico de Citas</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">

    @*====== CITAS AGENDADAS ======*@
    <div class="tab-pane fade show active" id="pendientes" role="tabpanel" aria-labelledby="pendientes-tab">
        <div id="container-agendadas" class="row">
            @if (Model.CitasPendientes == null || !Model.CitasPendientes.Any())
            {
                <div class="alert alert-info" role="alert" style="width: auto;">
                    No tienes citas pendientes en este momento.
                </div>
            }
            else
            {
                @foreach (var cita in Model.CitasPendientes)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@cita.NombreDoctor</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@cita.EspecialidadDoctor</h6>
                                <p class="card-text">
                                    Fecha: @(cita.FechaCita.HasValue ? cita.FechaCita.Value.ToString("dd/MM/yyyy") : "No disponible")
                                </p>
                                <p class="card-text">Hora: @cita.HoraCita</p>

                                <button type="button" class="btn btn-danger" data-cita-id="@cita.CitaId">
                                    Cancelar
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    @*====== CITAS ANTERIORES ======*@
    <div class="tab-pane fade" id="completadas" role="tabpanel" aria-labelledby="completadas-tab">
        <table class="table">
            <thead>
                <tr>
                    <th>Doctor</th>
                    <th>Especialidad</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cita in Model.CitasCompletadas)
                {
                    <tr>
                        <td>@cita.NombreDoctor</td>
                        <td>@cita.EspecialidadDoctor</td>
                        <td>
                            @(cita.FechaCita.HasValue ? cita.FechaCita.Value.ToString("dd/MM/yyyy") : "No disponible")
                        </td>
                        <td>@cita.HoraCita</td>
                        <td>@cita.Estado</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@*======== MODAL DE CONFIRMACION ========*@
<div class="modal fade" id="confirmCancel" tabindex="-1" aria-labelledby="confirmCancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmCancelModalLabel">Confirmar Cancelación</h5>
            </div>

            <div class="modal-body">
                ¿Está seguro de que desea cancelar esta cita?
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="modalCerrar">Cerrar</button>
                <a id="btnConfirmCancel" class="btn btn-danger" href="#">Cancelar Cita</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @*====== FUNCIONALIDADES ======*@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var cancelButtons = document.querySelectorAll('[data-cita-id]');
            var confirmCancelButton = document.getElementById('btnConfirmCancel');

            cancelButtons.forEach(function (button) {
                button.addEventListener('click', function () {
                    $('#confirmCancel').modal('show');

                    var citaId = this.getAttribute('data-cita-id');
                    confirmCancelButton.href = '@Url.Action("CancelarCita")' + '?id=' + citaId;
                });
            });

            document.getElementById('modalCerrar').addEventListener('click', function () {
                $('#confirmCancel').modal('hide');
            });
        });
    </script>
    @*=============================*@

    @*===== ESTILOS =====*@
    <style>
        .card {
            height: 100%;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }
    </style>
    @*===================*@
}