@model IEnumerable<SIGC_PROJECT.Models.Receta>

@{
    ViewData["Title"] = "Index";
}

<h1>Recetas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaEmision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicamentos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Indicaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEmision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicamentos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Indicaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.DoctorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.PacienteId)
            </td>
            <td>
                    <a asp-action="Edit" class=" btn btn-warning"  asp-route-id="@item.RecetaId">Edit</a> |
                    <a asp-action="Details" class=" btn btn-primary" asp-route-id="@item.RecetaId">Details</a> |
                    <a asp-action="Delete" class=" btn btn-danger" asp-route-id="@item.RecetaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
