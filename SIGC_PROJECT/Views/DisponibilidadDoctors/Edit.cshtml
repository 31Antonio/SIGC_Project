@model SIGC_PROJECT.Models.ViewModel.DisponibilidadDocVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card-header text-center">
                <h2 style="font-weight: bold; font-size: 1.7em; color: #04294F;">Editar horario</h2>
            </div>

            <div class="card-body">
                <form asp-action="Edit" id="disponibilidadForm">
                    <input type="hidden" asp-for="DoctorId" />

                    <div class="form-group select_todo">
                        <input type="checkbox" id="selectAll" /> Seleccionar todo
                    </div>

                    @foreach (var dia in Model.Dias.Keys)
                    {
                        <div class="form-group row mb-3 dias_grupo">
                            <div class="col-auto form-check">
                                <input type="checkbox" class="form-check-input day-checkbox" name="Dias[@dia]" value="true" id="@dia" @(Model.Dias[dia] ? "checked" : "") />
                                <label class="form-check-label day-label" for="@dia">@dia</label>
                            </div>

                            <div class="col-auto ml-5">
                                <div class="row">
                                    <div class="col-md-6 time-fields" style="display:@(Model.Dias[dia] ? "block" : "none");">
                                        <label for="HoraInicio_@dia" class="form-label">Hora Inicio</label>
                                        <input type="time" id="HoraInicio_@dia" name="HorasInicio[@dia]" class="form-control" value="@(Model.HorasInicio.ContainsKey(dia) ? Model.HorasInicio[dia] : "")" />
                                    </div>

                                    <div class="col-md-6 time-fields" style="display:@(Model.Dias[dia] ? "block" : "none");">
                                        <label for="HoraFin_@dia" class="form-label">Hora Fin</label>
                                        <input type="time" id="HoraFin_@dia" name="HorasFin[@dia]" class="form-control" value="@(Model.HorasFin.ContainsKey(dia) ? Model.HorasFin[dia] : "")" />
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    }

                    <div class="form-group mt-5 text-center">
                        <input type="submit" value="Guardar" class="btn btn-estilo" />
                        <a asp-action="Index" class="btn btn-danger font-weight-bold" style="width: 25%;">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @*======== FUNCIONALIDADES ========*@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const selectAllCheckbox = document.getElementById('selectAll');
            const dayCheckboxes = document.querySelectorAll('.day-checkbox');
            const form = document.getElementById('disponibilidadForm');

            selectAllCheckbox.addEventListener('change', function () {
                dayCheckboxes.forEach(function (checkbox) {
                    checkbox.checked = selectAllCheckbox.checked;
                    toggleTimeFields(checkbox);
                });
            });

            dayCheckboxes.forEach(function (checkbox) {
                checkbox.addEventListener('change', function () {
                    toggleTimeFields(checkbox);
                });
            });

            function toggleTimeFields(checkbox) {
                const timeFields = checkbox.closest('.form-group').querySelectorAll('.time-fields');
                if (checkbox.checked) {
                    timeFields.forEach(function (field) {
                        field.style.display = 'block';
                    });
                } else {
                    timeFields.forEach(function (field) {
                        field.style.display = 'none';
                    });
                }
            }
        });
    </script>
    @*=================================*@

    @*======== ESTILOS ========*@
    <style>
        .dias_grupo { 
            background-color: #ffffff;
            color: #000000;
            font-size: 1.3em;
            font-weight: bold;
            padding: 10px;
            margin-left: 2px;
        }

        .day-label {
            width: 100px;
            display: inline-block;
        }

        .select_todo {
            color: #000000;
            font-size: 1.3em;
            font-weight: bold;
            padding: 10px;
        }

        .btn-estilo {
            background-color: #17a71d;
            color: #FFFFFF;
            font-weight: bold;
            transition: background-color 0.3s linear;
            width: 25%;
        }

        .btn-estilo:hover {
            background-color: #61c13d;
            color: #FFFFFF;
            text-shadow: 1px 1px 2px #3e536d;
        }
    </style>
    @*=========================*@

}
