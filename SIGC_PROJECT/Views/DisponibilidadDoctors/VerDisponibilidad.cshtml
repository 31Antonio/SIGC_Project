@model IEnumerable<SIGC_PROJECT.Models.ViewModel.Doctor_DisponibilidadVM>

@{
    ViewData["Title"] = "Horario Doctores";
    var rol = ViewBag.Rol; 
}

@if(rol == "Paciente")
{
    <div class="form-group mb-4">
        <label for="especialidad" class="mt-3" style="font-weight: bold; font-size: 1.7em; color: #04294F;">Filtrar por especialidad: </label>
        <input type="text" name="especialidad" id="especialidad" class="form-control" oninput="filtrarDoctor()"/>
    </div>

    <div id="doctor-container" class="row">
    @foreach(var doctorDisponibilidad in Model)
    {
        <div class="col-md-4 doctor-card mb-4">
            <div class="card d-flex flex-column">
                <div class="card-body">
                    <h5 class="card-title text-center" style="font-weight: bold; color: #04294F;">@doctorDisponibilidad.Nombre @doctorDisponibilidad.Apellido</h5>
                    <h6 class="card-title mb-2 text-center" style="font-weight: bold; color: #000000;">@doctorDisponibilidad.Especialidad</h6>
                    <ul class="list-group list-group-flush">
                        @foreach(var disponibilidad in doctorDisponibilidad.Disponibilidades)
                        {
                            <li class="list-group-item" style="font-size: 1.2em; color: #04294F;">
                                <strong>@disponibilidad.Dia:</strong> @disponibilidad.HoraInicio - @disponibilidad.HoraFin
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Create" asp-controller="Citas" method="get">
                        <input type="hidden" name="idDoctor" value="@doctorDisponibilidad.idDoctor" />
                        <button type="submit" class="btn btn-estilo">Realizar Cita</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
}

@if(rol == "Secretaria")
{
        <div id="doctor-container" class="row">
    @foreach(var doctorDisponibilidad in Model)
    {
        <div class="col-md-12 doctor-card mb-4 mt-4">
            <div class="card d-flex flex-column">
                <div class="card-body">
                    <h5 class="card-title text-center" style="font-weight: bold; color: #04294F;">@doctorDisponibilidad.Nombre @doctorDisponibilidad.Apellido</h5>
                    <h6 class="card-title mb-2 text-center" style="font-weight: bold; color: #000000;">@doctorDisponibilidad.Especialidad</h6>
                    <ul class="list-group list-group-flush">
                        @foreach(var disponibilidad in doctorDisponibilidad.Disponibilidades)
                        {
                            <li class="list-group-item" style="font-size: 1.2em; color: #04294F;">
                                <strong>@disponibilidad.Dia:</strong> @disponibilidad.HoraInicio - @disponibilidad.HoraFin
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer text-center">
                    <form asp-action="Create" asp-controller="Citas" method="get">
                        <input type="hidden" name="idDoctor" value="@doctorDisponibilidad.idDoctor" />
                        <button type="submit" class="btn btn-estilo">Realizar Cita</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
}

@section Scripts{
    <script src="~/userlib/js/disponibilidad.js"></script>

    @*ESTILOS CSS*@
    <style>
        .card { 
            min-height: 410px;
        }

        .card-footer {
            margin-top: auto;
        }

        .btn-estilo {
            width: 70%;
            background-color: rgba(42, 62, 84, 1);
            color: #FFFFFF;
            transition: background-color 0.5s linear;
            font-weight: bold;
        }

        .btn-estilo:hover{
            background-color: #04294F;
            color: #FFFFFF;
        }
    </style>
}
