@model SIGC_PROJECT.Models.Paciente
@using SIGC_PROJECT.Helper;

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="card mt-2">
                <div class="card-header text-center">
                    <h2 style="font-weight: bold; font-size: 1.7em;">Registre su Información</h2>
                </div>

                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="Cedula" class="control-label"></label>
                                <input asp-for="Cedula" class="form-control" />
                                <span asp-validation-for="Cedula" class="text-danger"></span>
                            </div>

                            <div class="col-md-9"></div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Apellido" class="control-label"></label>
                                <input asp-for="Apellido" class="form-control" />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                                <input asp-for="FechaNacimiento" class="form-control" type="date"/>
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>

                            <div class="col-md-1 mb-3">
                                <label asp-for="Edad" class="control-label"></label>
                                <input asp-for="Edad" id="pacienteEdad" class="form-control" readonly />
                                <span asp-validation-for="Edad" class="text-danger"></span>
                            </div>

                            <div class="col-md-2 mb-3">
                                <label asp-for="Genero" class="control-label"></label>
                                <select asp-for="Genero" class="form-control">
                                    <option value="" hidden selected>Selec...</option>
                                    <option value="Femenino">Femenino</option>
                                    <option value="Masculino">Masculino</option>
                                </select>
                                <span asp-validation-for="Genero" class="text-danger"></span>
                            </div>

                            <div class="col-md-2 mb-3">
                                <label asp-for="Telefono" class="control-label"></label>
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Direccion" class="control-label"></label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="CorreoElectronico" class="control-label"></label>
                                <input asp-for="CorreoElectronico" class="form-control" />
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>
                            
                            <input asp-for="IdUsuario" value="@SessionHelper.GetNameIdentifier(User)" hidden/>

                        </div>

                        <div id="mensaje">
                            @if (TempData["MensajeError"] != null)
                            {
                                <div class="alert alert-danger" id="dataMensaje">@TempData["MensajeError"]</div>
                            }
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Guardar" class="btn btn-primary mt-5" />
                        </div>

                        <div class="form-group" hidden>
                            <label asp-for="HistorialMedico" class="control-label"></label>
                            <input asp-for="HistorialMedico" class="form-control" />
                            <span asp-validation-for="HistorialMedico" class="text-danger"></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/userlib/js/pacientescripts.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <style>
        #dataMensaje {
            text-align: center;
            font-weight: bold;
        }
    </style>
}
