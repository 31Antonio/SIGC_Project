@model SIGC_PROJECT.Models.Doctor

@{
    ViewData["Title"] = "Detalles Doctor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
        
            <div class="card">
                <div class="card-header text-center">
                    <h2 style="font-weight: bold; font-size: 1.7em; color: #04294F;">Información General</h2>
                </div>

                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Cédula:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Cedula)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Nombre:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Nombre)
                        </div>
                    </div>

                    <div class="row striped-row mb-3">
                        <div class="col-sm-3">
                            <strong>Apellido:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Apellido)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Especialidad:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Especialidad) (@Html.DisplayFor(model => model.Consultorio))
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Número Exequatur:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.NumeroExequatur)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Teléfono:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Telefono)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Correo Electrónico:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.CorreoElectronico)
                        </div>
                    </div>

                </div>

                <div class="card-footer text-center mt-3">
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.DoctorId">Editar</a>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .btn { 
        font-weight: bold;
        width: 20%;
    }

    .col-sm-3 {
        color: #04294F;
        font-size: 1.2em;
    }

    .col-sm-9 {
        font-weight: bold;
        color: #000000;
        font-size: 1.2em;
    }
</style>